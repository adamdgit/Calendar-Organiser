// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  profileImgUrl String?
  team Team[] // many teams
  role Role @default(USER)
}

// one-to-many relation. Many Teams to one User
model Team {
  id Int @id @default(autoincrement())
  name String
  pokemon Pokemon[] // many pokemon
  author User @relation(fields: [authorID], references: [id])
  authorID Int

  @@index([authorID])
}

// one-to-many relation. Many pokemon to one Team
model Pokemon { 
  id Int @id @default(autoincrement()) 
  name String // pokemon name
  team Team @relation(fields: [teamID], references: [id])
  teamID Int

  @@index([teamID])
} 

enum Role {
  ADMIN
  USER // default
}